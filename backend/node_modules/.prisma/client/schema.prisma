generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String?  @unique
  username      String?  @unique
  password      String?
  avatar        String?
  telephone     String?
  gender        String?  @default("Nam") // ✅ Thêm field này
  address       String? // ✅ Thêm field này
  bio           String? // ✅ Thêm field này
  createdAt     DateTime @default(now())
  googleId      String?
  emailVerified Boolean  @default(false)
  loginType     String   @default("email")

  @@index([googleId])
}
