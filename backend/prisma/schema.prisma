generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  email         String?  @unique
  username      String?  @unique
  password      String?
  avatar        String?
  telephone     String?
  gender        String?  @default("Nam") 
  address       String? 
  bio           String? 
  createdAt     DateTime @default(now())
  googleId      String?
  emailVerified Boolean  @default(false)
  loginType     String   @default("email")
  posts Post[]
  
  @@index([googleId])
}

model Post {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  title         String 
  price         Int
  images          String[]
  address       String
  city          String
  bedroom       Int
  bathroom      Int
  latitude      String
  longitude     String
  description   String
  createdAt     DateTime @default(now())
  type Type
  property Property

  user User @relation(fields: [userId], references: [id])
  userId String @db.ObjectId

  postDetail PostDetail?
}

enum Type {
  rent
  buy
  sell
}

enum Property {
  house
  apartment
  condo
  land
  villa
}

model PostDetail {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  content   String
  utilities String?
  pet String?
  income String?
  size Int?
  school Int?
  bus Int?
  restaurant Int?
  post      Post     @relation(fields: [postId], references: [id])
  postId    String   @db.ObjectId @unique
}